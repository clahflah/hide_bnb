        <%= link_to "My Bookings", bookings_path, class:"nav-button"%>
      </div>

      <div class="left-nav">
        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, data: {"turbo-method": :delete} , class:"light-button"%>
        <% end %>
        <%# continue from here %>

        <%# <% if user_signed_in? %>
